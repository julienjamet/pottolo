{
    "compilerOptions": {
        "target": "ES2022", // OK, tu veux du moderne
        "lib": [
            "ES2022",
            "DOM"
        ], // Ajoute "DOM" si tu utilises console, setTimeout, etc. (optionnel backend)
        "module": "NodeNext", // OK pour Node ESM
        "moduleResolution": "nodenext", // <-- IMPORTANT pour résoudre correctement les modules Node
        "strict": true,
        "skipLibCheck": true, // Mets true pour éviter les erreurs dans node_modules
        "noEmitOnError": true,
        "outDir": "./dist",
        "rootDir": "./src", // ajoute rootDir pour mieux organiser
        "esModuleInterop": true, // IMPORTANT pour compatibilité imports commonjs
        "forceConsistentCasingInFileNames": true,
        "paths": {
            "@/*": [
                "./src/*"
            ]
        },
        "types": [
            "node"
        ] // <-- ajoute ça pour avoir les types Node globaux (Buffer, process, etc)
    },
    "include": [
        "src/**/*"
    ]
}